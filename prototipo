/* Carrusel */
/* Estilos para el carrusel */
.carousel {
/* Asegurar que el carrusel no sea más ancho que la pantalla */
.carousel {
    width: 100%;
    max-width: 100%;
    height: auto;
    overflow: hidden;
    border-radius: 10px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
}

/* Hacer que los elementos del carrusel se ajusten al tamaño del contenedor */
.carousel-container {
    display: flex;
    transition: transform 0.5s ease-in-out;
    width: 100%; /* Si hay 3 elementos */

}

/* Asegurar que cada elemento del carrusel tome el tamaño correcto */
.carousel-item {
    width: 100%;
    flex: 0 0 100%;
    height: auto;
}

/* Hacer que las imágenes dentro del carrusel sean responsivas */
.carousel-item img {
    width: 100%;
    height: auto;
    object-fit: contain;
}

/* Ajustar los botones de navegación para móviles */
